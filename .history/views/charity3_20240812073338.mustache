    <!-- Add Item Button -->
    <div class="add-item">
      <button id="addItemBtn" class="btn form_button">Add Item</button>
    </div>

    <!-- Add Item Form (Initially Hidden) -->
    <div id="addItemBackground" class="add-item-background">
        <div class="add-item-overlay">
            <div class="add-item-text">
                <h1>Add New Item</h1>
                <p>Fill in the details below to add a new item to the inventory.</p>
            </div>
            <form id="addItemForm" class="add-item-form" action="/newCharity3" method="post">
                <div class="form-input-group">
                    <label class="form-label" for="author">Author:</label>
                    <input type="text" id="author" name="author" placeholder="Enter author's name" required>
                </div>
                <div class="form-input-group">
                    <label class="form-label" for="itemName">Item Name:</label>
                    <input type="text" id="itemName" name="subject" placeholder="Enter item name" required>
                </div>
                <div class="form-input-group">
                    <label class="form-label" for="itemDescription">Description:</label>
                    <input type="text" id="itemDescription" name="contents" placeholder="Enter item description" required>
                </div>
                <div class="form-input-group">
                    <label class="form-label" for="itemPrice">Price (£):</label>
                    <input type="number" id="itemPrice" name="price" placeholder="Enter item price" step="0.01">
                </div>
                <div class="form-input-group">
                    <label class="form-label" for="itemQuantity">Quantity:</label>
                    <input type="number" id="itemQuantity" name="quantity" placeholder="Enter quantity" min="1">
                </div>
                <div class="form-actions">
                    <button type="submit" class="form-button">Add Item</button>
                    <button type="button" id="cancelBtn" class="form-cancel-button">Cancel</button>
                </div>
            </form>
            
        </div>
    </div>
    
    
